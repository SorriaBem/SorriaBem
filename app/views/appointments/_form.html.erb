<%= form_with(model: appointment) do |form| %>
  <%= link_to 'Voltar', :back, class: 'btn btn-primary' %>
  <% if appointment.errors.any? %>

    <div style="color: red;">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>

  <% end %>

  <div>
    <%= form.label :date, "Data da Consulta:" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :time %>
    <%= form.time_field :time %>
  </div>

  <div>
    <%= form.label :dentist_id %>
    <%= form.collection_select :dentist_id, Dentist.all, :id, :nome, prompt: "Selecione um dentista" %>
  </div>

  <div>
    <%= form.label :patient_id %>
    <%= form.collection_select :patient_id, Patient.all, :id, :full_name, prompt: "Selecione um paciente" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
